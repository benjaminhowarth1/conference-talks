@using RomanSPA;
<nav class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <a class="brand" href="/">
            <span class="title">Hot Towel SPA</span>
        </a>
        @if (Context.IsRomanRequest()) {
            <div class="btn-group" data-bind="foreach: router.navigationModel">
                <a data-bind="css: { active: isActive }, attr: { href: hash }, text: title"
                   class="btn btn-info" href="#"></a>
            </div>
        } else {
            <div class="btn-group">
                <a class="btn btn-info" href="/">Home</a>
                <a class="btn btn-info" href="/details">Details</a>
                <a class="btn btn-info" href="/blog">Blog</a>
            </div>
        }

        <div class="loader pull-right" data-bind="css: { active: router.isNavigating }">
            <div class="progress progress-striped active page-progress-bar">
                <div class="bar" style="width: 100px;"></div>
            </div>
        </div>
    </div>
</nav>
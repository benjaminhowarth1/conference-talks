@using RomanSPA.Core;
@using RomanSPA.Demo.AngularJS.Models;
@model IndexModel

@{
    Layout = Context.IsRomanViewRequest() ? String.Empty : "~/Views/Shared/_Layout.cshtml";

    if (Context.IsRomanViewRequest()) {
        <div>
            <div class="jumbotron">
                <h2>This was loaded with AJAX.</h2>
                <p>Check it out vs. the source code of the page.</p>
            </div>
        </div>
    } else {
    <div>
        <div class="jumbotron">
            <h1>Welcome to RomanSPA</h1>
            <p>This is a demo site put together using AngularJS and some clever MVC hacks.</p>
            <p>This work is licensed under a <a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/4.0/">Creative Commons Attribution-NonCommercial-ShareAlike 4.0 International License</a>.</p>
            <a href="http://creativecommons.org/licenses/by-nc-sa/4.0/">
                <img alt="Creative Commons License" style="border-width:0" src="http://i.creativecommons.org/l/by-nc-sa/4.0/88x31.png" />
            </a>
            <p><a class="btn btn-primary btn-lg" href="http://github.com/codegeceko/conference-talks/RomanSPA">Fork me on GitHub</a></p>
        </div>
    </div>
    }

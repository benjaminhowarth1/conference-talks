@model IEnumerable<RomanSPA.Demo.Models.BlogPost>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Blog</h2>

@foreach (var post in Model) {
    <article>
        <header>
            <h3>@post.Title</h3>
            <p>Posted on @post.PostDate</p>
        </header>
        <p>@post.Summary</p>
        <a href="@Html.Action("Blog", post.ID)">Read more...</a>
    </article>
}